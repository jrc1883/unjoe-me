<section class="interests-section">
  <h2 class="section-title">My Interests</h2>

  <div class="breadcrumb-display" id="interest-breadcrumb">
    <span class="breadcrumb-text"></span>
  </div>

  <div class="interests-grid">
    {interests.map(group => (
      <div class="interest-group">
        <span class="group-label">{group.category}</span>
        <div class="interest-items">
          {group.items.map(item => (
            <div
              class="interest-item"
              data-category={group.category}
              data-name={item.name}
            >
              <svg class="item-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d={iconPaths[item.icon]} />
              </svg>
              <span class="item-label">{item.name}</span>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const items = document.querySelectorAll('.interest-item');
    const breadcrumb = document.getElementById('interest-breadcrumb');
    const breadcrumbText = breadcrumb?.querySelector('.breadcrumb-text');

    items.forEach(item => {
      item.addEventListener('mouseenter', () => {
        const category = item.getAttribute('data-category');
        const name = item.getAttribute('data-name');
        if (breadcrumbText) {
          breadcrumbText.innerHTML = `<span class="bc-category">${category}</span> / <span class="bc-name">${name}</span>`;
        }
        breadcrumb?.classList.add('active');
      });

      item.addEventListener('mouseleave', () => {
        if (breadcrumbText) {
          breadcrumbText.textContent = '';
        }
        breadcrumb?.classList.remove('active');
      });
    });
  });
</script>

<style>
  .interests-section {
    padding: 3rem 0;
    max-width: 1000px;
    margin: 0 auto;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .section-title {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 1rem 0;
    padding: 0.5rem 1rem;
    background: var(--card-bg);
    border-radius: 999px;
    display: inline-block;
  }

  .breadcrumb-display {
    margin-bottom: 1.5rem;
    padding: 0.5rem 1rem;
    display: block;
    width: 220px;
    height: 2rem;
    opacity: 0;
    transition: opacity 0.2s ease;
    overflow: hidden;
    white-space: nowrap;
  }

  .breadcrumb-display.active {
    opacity: 1;
  }

  @media (max-width: 900px) {
    .breadcrumb-display {
      display: none;
    }
  }

  .breadcrumb-text {
    font-size: 0.875rem;
    color: var(--text-primary);
  }

  :global(.bc-category) {
    color: var(--text-muted);
  }

  :global(.bc-name) {
    color: var(--accent);
    font-weight: 500;
  }

  .interests-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .interest-group {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .group-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .interest-items {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
  }

  .interest-item {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 0.875rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 0.5rem;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .interest-item:hover {
    background: var(--card-hover);
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .interest-item:hover .item-icon {
    color: var(--accent);
  }

  .item-icon {
    width: 24px;
    height: 24px;
    color: var(--text-secondary);
    transition: color 0.2s ease;
  }

  .item-label {
    display: none;
    font-size: 0.75rem;
    color: var(--text-muted);
    text-align: center;
  }

  @media (max-width: 900px) {
    .item-label {
      display: block;
    }

    .interest-item {
      padding: 1rem 0.5rem;
    }
  }

  @media (max-width: 900px) {
    .interests-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 500px) {
    .interests-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
