---
import { SITE_TITLE, SOCIAL_LINKS } from '../consts';
const year = new Date().getFullYear();
---

<footer>
  <div class="container">
    <div class="footer-content">
      <p class="copyright">&copy; {year} {SITE_TITLE}. Built with <a href="https://astro.build" target="_blank">Astro</a>.</p>
      <div class="social-links">
        <a href={SOCIAL_LINKS.github} target="_blank">GitHub</a>
        <a href={SOCIAL_LINKS.linkedin} target="_blank">LinkedIn</a>
        <a href={SOCIAL_LINKS.email}>Email</a>
      </div>
    </div>
  </div>
</footer>

<style>
  footer { border-top: 1px solid #27272a; padding: 2rem 0; margin-top: 4rem; }
  .container { max-width: 1000px; margin: 0 auto; padding: 0 1.5rem; }
  .footer-content { display: flex; justify-content: space-between; align-items: center; }
  .copyright { font-size: 0.875rem; color: #71717a; margin: 0; }
  .copyright a { color: #a1a1aa; text-decoration: none; }
  .copyright a:hover { color: #fafafa; }
  .social-links { display: flex; gap: 1.5rem; }
  .social-links a { color: #71717a; text-decoration: none; font-size: 0.875rem; }
  .social-links a:hover { color: #fafafa; }
  @media (max-width: 640px) { .footer-content { flex-direction: column; gap: 1rem; text-align: center; } }
</style>
