---
const socialLinks = [
  { name: 'GitHub', url: 'https://github.com/jrc1883', icon: 'github' },
  { name: 'LinkedIn', url: 'https://www.linkedin.com/in/josephcannon/', icon: 'linkedin' },
  { name: 'X', url: 'https://x.com/iamautojoe', icon: 'x' },
  { name: 'Email', url: 'mailto:joseph.cannon@outlook.com', icon: 'email' },
];
---

<div class="profile-card">
  <div class="location-map">
    <div id="map-container"></div>
    <div class="location-label">
      <span class="location-icon">
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
          <circle cx="12" cy="10" r="3"/>
        </svg>
      </span>
      Illinois, USA
    </div>
  </div>

  <div class="social-links">
    {socialLinks.map(link => (
      <a href={link.url} class="social-btn" title={link.name} target="_blank" rel="noopener">
        {link.icon === 'github' && (
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        )}
        {link.icon === 'linkedin' && (
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
        )}
        {link.icon === 'x' && (
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
        )}
        {link.icon === 'email' && (
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
        )}
      </a>
    ))}
  </div>
</div>

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script is:inline src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('map-container');
    if (!container) return;

    // Center on continental US
    const usCenter = [39.5, -98.35];

    const map = L.map('map-container', {
      center: usCenter,
      zoom: 3,
      zoomControl: false,
      attributionControl: false,
      dragging: false,
      scrollWheelZoom: false,
      doubleClickZoom: false,
      touchZoom: false,
    });

    // Dark map tiles
    L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png', {
      subdomains: 'abcd',
    }).addTo(map);

    // Pulsing marker on Illinois
    const pulsingIcon = L.divIcon({
      className: 'pulsing-marker',
      iconSize: [14, 14],
      iconAnchor: [7, 7],
    });

    // Illinois location (near Chicago/Yorkville area)
    L.marker([41.6, -88.4], { icon: pulsingIcon }).addTo(map);
  });
</script>

<style>
  .profile-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    gap: 1rem;
  }

  .location-map {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  #map-container {
    width: 100%;
    height: 180px;
    border-radius: 12px;
    overflow: hidden;
  }

  :global(.pulsing-marker) {
    width: 14px;
    height: 14px;
    background: #22c55e;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(34, 197, 94, 0); }
    100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0); }
  }

  .location-label {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    margin-top: 0.75rem;
    padding: 0.375rem 0.75rem;
    background: rgba(34, 197, 94, 0.15);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 600;
    color: #22c55e;
  }

  .location-icon {
    display: flex;
    align-items: center;
  }

  .social-links {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.5rem;
  }

  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.625rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 8px;
    color: var(--text-secondary);
    transition: all 0.2s ease;
  }

  .social-btn:hover {
    background: var(--card-hover);
    border-color: var(--accent);
    color: var(--text-primary);
    transform: translateY(-2px);
  }

  .social-btn svg {
    width: 18px;
    height: 18px;
  }
</style>
