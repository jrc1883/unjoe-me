---
import { SITE_TITLE, NAV_ITEMS, SOCIAL_LINKS } from '../consts';
const pathname = Astro.url.pathname;
---

<header>
  <nav class="container">
    <a href="/" class="logo">{SITE_TITLE}</a>
    <div class="nav-links">
      {NAV_ITEMS.map((item) => (
        <a href={item.href} class:list={['nav-link', { active: pathname.startsWith(item.href) }]}>
          {item.label}
        </a>
      ))}
    </div>
    <div class="social-links">
      <a href={SOCIAL_LINKS.github} target="_blank" aria-label="GitHub">GH</a>
      <a href={SOCIAL_LINKS.linkedin} target="_blank" aria-label="LinkedIn">LI</a>
      <a href={SOCIAL_LINKS.email} aria-label="Email">@</a>
    </div>
  </nav>
</header>

<style>
  header { position: sticky; top: 0; z-index: 100; background: rgba(10,10,11,0.9); backdrop-filter: blur(12px); border-bottom: 1px solid #27272a; }
  nav { display: flex; align-items: center; justify-content: space-between; padding: 1rem 1.5rem; max-width: 1000px; margin: 0 auto; }
  .logo { font-weight: 700; font-size: 1.125rem; color: #fafafa; text-decoration: none; }
  .logo:hover { opacity: 0.8; }
  .nav-links { display: flex; gap: 2rem; }
  .nav-link { color: #a1a1aa; font-size: 0.9rem; text-decoration: none; transition: color 0.2s; }
  .nav-link:hover, .nav-link.active { color: #fafafa; }
  .social-links { display: flex; gap: 1rem; }
  .social-links a { color: #71717a; text-decoration: none; font-size: 0.875rem; }
  .social-links a:hover { color: #fafafa; }
  @media (max-width: 640px) { .nav-links { gap: 1rem; } .social-links { display: none; } }
</style>
