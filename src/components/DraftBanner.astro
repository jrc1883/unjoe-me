---
// Draft banner component - only shown in development mode
const isDraft = Astro.props.draft ?? false;
const isDev = import.meta.env.DEV;

// Only show if it's a draft AND we're in dev mode
const shouldShow = isDraft && isDev;
---

{shouldShow && (
	<div class="draft-banner">
		<div class="draft-banner-content">
			<svg class="draft-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
				<path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
				<line x1="12" y1="9" x2="12" y2="13"></line>
				<line x1="12" y1="17" x2="12.01" y2="17"></line>
			</svg>
			<div class="draft-text">
				<span class="draft-label">DRAFT POST</span>
				<span class="draft-description">This post is not published and only visible in development mode.</span>
			</div>
		</div>
	</div>
)}

<style>
	.draft-banner {
		position: sticky;
		top: 0;
		z-index: 100;
		background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
		border-bottom: 2px solid #b45309;
		box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
		animation: slideDown 0.3s ease;
	}

	@keyframes slideDown {
		from {
			opacity: 0;
			transform: translateY(-100%);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.draft-banner-content {
		display: flex;
		align-items: center;
		gap: 1rem;
		max-width: 800px;
		margin: 0 auto;
		padding: 1rem 1.5rem;
	}

	.draft-icon {
		flex-shrink: 0;
		color: #ffffff;
		filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
	}

	.draft-text {
		display: flex;
		flex-direction: column;
		gap: 0.125rem;
	}

	.draft-label {
		font-size: 0.75rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: #ffffff;
		text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
	}

	.draft-description {
		font-size: 0.875rem;
		color: rgba(255, 255, 255, 0.95);
		line-height: 1.4;
	}

	/* Pulse animation to draw attention */
	@keyframes pulse {
		0%, 100% {
			opacity: 1;
		}
		50% {
			opacity: 0.9;
		}
	}

	.draft-banner {
		animation: slideDown 0.3s ease, pulse 2s ease-in-out infinite;
	}

	@media (max-width: 640px) {
		.draft-banner-content {
			padding: 0.875rem 1rem;
			gap: 0.75rem;
		}

		.draft-icon {
			width: 18px;
			height: 18px;
		}

		.draft-label {
			font-size: 0.6875rem;
		}

		.draft-description {
			font-size: 0.8125rem;
		}
	}
</style>
