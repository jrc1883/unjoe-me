---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';
import { getReadingTimeFromEntry, formatReadingTime } from '../../utils/reading-time';

// Get all posts, filtering out drafts in production
const allPosts = await getCollection('blog');
const isDev = import.meta.env.DEV;
const posts = allPosts
	.filter(post => isDev || !post.data.draft) // Show drafts only in dev mode
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Extract unique tags and sort by frequency
const allTags = posts.flatMap(post => post.data.tags || []);
const tagCounts = allTags.reduce((acc, tag) => {
	acc[tag] = (acc[tag] || 0) + 1;
	return acc;
}, {} as Record<string, number>);
const uniqueTags = Object.entries(tagCounts)
	.sort(([, a], [, b]) => b - a)
	.map(([tag]) => tag);

function formatDate(date: Date) {
	return date.toLocaleDateString('en-US', {
		year: 'numeric',
		month: 'short',
		day: 'numeric'
	});
}

// Capitalize tag for display
function formatTag(tag: string) {
	return tag.split('-').map(word =>
		word.charAt(0).toUpperCase() + word.slice(1)
	).join(' ');
}
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Writings | ${SITE_TITLE}`} description="Insights on leadership, engineering, and building systems that matter." />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=IBM+Plex+Sans:wght@400;500;600&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header />
		<main>
			<div class="container">
				<!-- Page Header -->
				<header class="page-header">
					<span class="section-label">Writings</span>
					<h1>All Articles</h1>
				</header>

				<!-- Tag Filter - Top tags only -->
				{uniqueTags.length > 0 && (
					<div class="tag-filter">
						<div class="tag-filter-label">Filter by topic:</div>
						<div class="tag-filter-buttons">
							<button class="filter-tag active" data-tag="all">
								All <span class="tag-count">{posts.length}</span>
							</button>
							{uniqueTags.slice(0, 8).map(tag => (
								<button class="filter-tag" data-tag={tag}>
									{formatTag(tag)} <span class="tag-count">{tagCounts[tag]}</span>
								</button>
							))}
						</div>
					</div>
				)}

				<!-- Featured Post -->
				{posts.length > 0 && (
					<a href={`/blog/${posts[0].id}/`} class="featured-post filterable-post" data-tags={JSON.stringify(posts[0].data.tags || [])}>
						<div class="featured-content">
							<div class="label-row">
								<span class="featured-label">Latest</span>
								{isDev && posts[0].data.draft && (
									<span class="draft-badge">
										<svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
											<path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
											<line x1="12" y1="9" x2="12" y2="13"></line>
											<line x1="12" y1="17" x2="12.01" y2="17"></line>
										</svg>
										DRAFT
									</span>
								)}
							</div>
							<h2>{posts[0].data.title}</h2>
							<p class="featured-description">{posts[0].data.description}</p>
							<div class="featured-meta">
								<time datetime={posts[0].data.pubDate.toISOString()}>
									{formatDate(posts[0].data.pubDate)}
								</time>
								<span class="meta-separator">•</span>
								<span class="reading-time">{formatReadingTime(getReadingTimeFromEntry(posts[0]))}</span>
								<span class="read-indicator">
									Read article
									<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
										<path d="M5 12h14M12 5l7 7-7 7"/>
									</svg>
								</span>
							</div>
						</div>
						<div class="featured-accent"></div>
					</a>
				)}

				<!-- Article List -->
				{posts.length > 1 && (
					<section class="articles-section">
						<h3 class="section-title">All Writings</h3>
						<div class="articles-list">
							{posts.slice(1).map((post, index) => (
								<a href={`/blog/${post.id}/`} class="article-item filterable-post" data-tags={JSON.stringify(post.data.tags || [])}>
									<span class="article-number">{String(index + 2).padStart(2, '0')}</span>
									<div class="article-content">
										<div class="article-title-row">
											<h4>{post.data.title}</h4>
											{isDev && post.data.draft && (
												<span class="draft-badge draft-badge-small">
													<svg width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
														<path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
														<line x1="12" y1="9" x2="12" y2="13"></line>
														<line x1="12" y1="17" x2="12.01" y2="17"></line>
													</svg>
													DRAFT
												</span>
											)}
										</div>
										<p>{post.data.description}</p>
										<div class="article-meta">
											<time datetime={post.data.pubDate.toISOString()}>
												{formatDate(post.data.pubDate)}
											</time>
											<span class="meta-separator">•</span>
											<span class="reading-time">{formatReadingTime(getReadingTimeFromEntry(post))}</span>
										</div>
									</div>
									<span class="article-arrow">
										<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
											<path d="M5 12h14M12 5l7 7-7 7"/>
										</svg>
									</span>
								</a>
							))}
						</div>
					</section>
				)}

				<!-- Empty State -->
				{posts.length === 0 && (
					<div class="empty-state">
						<p>No articles yet. Check back soon.</p>
					</div>
				)}
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	:root {
		--font-display: 'DM Serif Display', Georgia, serif;
		--font-body: 'IBM Plex Sans', system-ui, sans-serif;
		--color-bg: #0a0a0b;
		--color-bg-elevated: #111113;
		--color-bg-hover: #18181b;
		--color-border: #27272a;
		--color-border-subtle: #1f1f23;
		--color-text-primary: #fafafa;
		--color-text-secondary: #a1a1aa;
		--color-text-muted: #71717a;
		--color-accent: #3b82f6;
		--color-accent-subtle: rgba(59, 130, 246, 0.1);
	}

	body {
		background-color: var(--color-bg);
		color: var(--color-text-primary);
		font-family: var(--font-body);
		margin: 0;
		line-height: 1.6;
	}

	main {
		min-height: calc(100vh - 200px);
	}

	.container {
		max-width: 800px;
		margin: 0 auto;
		padding: 0 1.5rem 4rem;
	}

	/* Page Header */
	.page-header {
		padding: 4rem 0 3rem;
		border-bottom: 1px solid var(--color-border-subtle);
		margin-bottom: 3rem;
	}

	.section-label {
		display: inline-block;
		font-size: 0.75rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: var(--color-accent);
		margin-bottom: 1rem;
	}

	.page-header h1 {
		font-family: var(--font-display);
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		font-weight: 400;
		margin: 0 0 1rem;
		line-height: 1.1;
		letter-spacing: -0.02em;
	}

	.subtitle {
		font-size: 1.125rem;
		color: var(--color-text-secondary);
		margin: 0;
		max-width: 500px;
		line-height: 1.7;
	}

	/* Featured Post */
	.featured-post {
		display: block;
		position: relative;
		background: var(--color-bg-elevated);
		border: 1px solid var(--color-border);
		border-radius: 16px;
		padding: 2.5rem;
		margin-bottom: 3rem;
		text-decoration: none;
		overflow: hidden;
		transition: all 0.3s ease;
	}

	.featured-post:hover {
		border-color: var(--color-accent);
		transform: translateY(-2px);
	}

	.featured-post:hover .featured-accent {
		opacity: 1;
	}

	.featured-post:hover .read-indicator svg {
		transform: translateX(4px);
	}

	.featured-accent {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 3px;
		background: linear-gradient(90deg, var(--color-accent), #8b5cf6);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.featured-content {
		position: relative;
		z-index: 1;
	}

	.label-row {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 1.25rem;
		flex-wrap: wrap;
	}

	.featured-label {
		display: inline-block;
		font-size: 0.6875rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		color: var(--color-accent);
		background: var(--color-accent-subtle);
		padding: 0.375rem 0.75rem;
		border-radius: 100px;
	}

	.draft-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.375rem;
		font-size: 0.625rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		color: #f59e0b;
		background: rgba(245, 158, 11, 0.1);
		border: 1px solid rgba(245, 158, 11, 0.3);
		padding: 0.375rem 0.75rem;
		border-radius: 100px;
	}

	.draft-badge svg {
		flex-shrink: 0;
	}

	.draft-badge-small {
		font-size: 0.5625rem;
		padding: 0.25rem 0.5rem;
		gap: 0.25rem;
	}

	.featured-post h2 {
		font-family: var(--font-display);
		font-size: clamp(1.5rem, 3vw, 2rem);
		font-weight: 400;
		margin: 0 0 0.75rem;
		color: var(--color-text-primary);
		line-height: 1.3;
	}

	.featured-description {
		font-size: 1rem;
		color: var(--color-text-secondary);
		margin: 0 0 1.5rem;
		line-height: 1.7;
	}

	.featured-meta {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	.featured-meta time {
		font-size: 0.875rem;
		color: var(--color-text-muted);
	}

	.featured-meta .meta-separator {
		color: var(--color-text-muted);
		opacity: 0.5;
	}

	.featured-meta .reading-time {
		font-size: 0.875rem;
		color: var(--color-text-muted);
	}

	.read-indicator {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.875rem;
		font-weight: 500;
		color: var(--color-accent);
	}

	.read-indicator svg {
		transition: transform 0.2s ease;
	}

	/* Articles Section */
	.articles-section {
		margin-top: 2rem;
	}

	.section-title {
		font-size: 0.75rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: var(--color-text-muted);
		margin: 0 0 1.5rem;
		padding-bottom: 1rem;
		border-bottom: 1px solid var(--color-border-subtle);
	}

	.articles-list {
		display: flex;
		flex-direction: column;
		gap: 0;
	}

	.article-item {
		display: grid;
		grid-template-columns: auto 1fr auto auto;
		align-items: center;
		gap: 1.5rem;
		padding: 1.5rem 0;
		border-bottom: 1px solid var(--color-border-subtle);
		text-decoration: none;
		transition: all 0.2s ease;
	}

	.article-item:hover {
		padding-left: 1rem;
		padding-right: 1rem;
		margin-left: -1rem;
		margin-right: -1rem;
		background: var(--color-bg-hover);
		border-radius: 12px;
		border-bottom-color: transparent;
	}

	.article-item:hover + .article-item {
		border-top-color: transparent;
	}

	.article-item:hover .article-arrow {
		opacity: 1;
		transform: translateX(0);
	}

	.article-item:hover h4 {
		color: var(--color-accent);
	}

	.article-number {
		font-family: 'SF Mono', 'Fira Code', monospace;
		font-size: 0.8125rem;
		color: var(--color-text-muted);
		min-width: 1.5rem;
	}

	.article-content {
		min-width: 0;
	}

	.article-title-row {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.article-content h4 {
		font-family: var(--font-body);
		font-size: 1.0625rem;
		font-weight: 500;
		margin: 0 0 0.25rem;
		color: var(--color-text-primary);
		transition: color 0.2s ease;
	}

	.article-content p {
		font-size: 0.875rem;
		color: var(--color-text-muted);
		margin: 0 0 0.375rem;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.article-meta {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.8125rem;
		color: var(--color-text-muted);
	}

	.article-meta time {
		color: var(--color-text-muted);
	}

	.meta-separator {
		color: var(--color-text-muted);
		opacity: 0.5;
	}

	.reading-time {
		color: var(--color-text-muted);
	}

	.article-item time {
		font-size: 0.8125rem;
		color: var(--color-text-muted);
		white-space: nowrap;
	}

	.article-arrow {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 32px;
		height: 32px;
		color: var(--color-accent);
		opacity: 0;
		transform: translateX(-8px);
		transition: all 0.2s ease;
	}

	/* Empty State */
	.empty-state {
		text-align: center;
		padding: 4rem 2rem;
		color: var(--color-text-muted);
	}

	/* Responsive */
	@media (max-width: 640px) {
		.page-header {
			padding: 3rem 0 2rem;
		}

		.featured-post {
			padding: 1.75rem;
		}

		.article-item {
			grid-template-columns: auto 1fr auto;
			gap: 1rem;
		}

		.article-item time {
			display: none;
		}

		.article-arrow {
			display: none;
		}

		.article-content p {
			display: none;
		}
	}

	/* Staggered animation on load */
	@keyframes fadeSlideIn {
		from {
			opacity: 0;
			transform: translateY(12px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.page-header {
		animation: fadeSlideIn 0.5s ease forwards;
	}

	.featured-post {
		animation: fadeSlideIn 0.5s ease 0.1s forwards;
		opacity: 0;
	}

	.articles-section {
		animation: fadeSlideIn 0.5s ease 0.2s forwards;
		opacity: 0;
	}

	.article-item:nth-child(1) { animation: fadeSlideIn 0.4s ease 0.25s forwards; opacity: 0; }
	.article-item:nth-child(2) { animation: fadeSlideIn 0.4s ease 0.3s forwards; opacity: 0; }
	.article-item:nth-child(3) { animation: fadeSlideIn 0.4s ease 0.35s forwards; opacity: 0; }
	.article-item:nth-child(4) { animation: fadeSlideIn 0.4s ease 0.4s forwards; opacity: 0; }
	.article-item:nth-child(5) { animation: fadeSlideIn 0.4s ease 0.45s forwards; opacity: 0; }

	/* Tag Filter */
	.tag-filter {
		margin-bottom: 2.5rem;
		padding-bottom: 2rem;
		border-bottom: 1px solid var(--color-border-subtle);
	}

	.tag-filter-label {
		font-size: 0.75rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: var(--color-text-muted);
		margin-bottom: 1rem;
	}

	.tag-filter-buttons {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}

	.filter-tag {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--color-bg-elevated);
		border: 1px solid var(--color-border);
		border-radius: 100px;
		font-size: 0.875rem;
		color: var(--color-text-secondary);
		cursor: pointer;
		transition: all 0.2s ease;
		font-family: var(--font-body);
	}

	.filter-tag:hover {
		background: var(--color-bg-hover);
		border-color: var(--color-accent);
		color: var(--color-text-primary);
	}

	.filter-tag.active {
		background: var(--color-accent-subtle);
		border-color: var(--color-accent);
		color: var(--color-accent);
	}

	.tag-count {
		font-size: 0.75rem;
		opacity: 0.7;
	}

	.filter-tag.active .tag-count {
		opacity: 1;
	}

	/* Hidden state for filtered posts */
	.filterable-post.hidden {
		display: none;
	}

	@media (max-width: 640px) {
		.tag-filter-buttons {
			overflow-x: auto;
			flex-wrap: nowrap;
			-webkit-overflow-scrolling: touch;
			scrollbar-width: none;
			-ms-overflow-style: none;
		}

		.tag-filter-buttons::-webkit-scrollbar {
			display: none;
		}

		.filter-tag {
			flex-shrink: 0;
		}
	}
</style>

<script>
	// Tag filtering functionality
	document.addEventListener('DOMContentLoaded', () => {
		const filterButtons = document.querySelectorAll('.filter-tag');
		const filterablePosts = document.querySelectorAll('.filterable-post');

		filterButtons.forEach(button => {
			button.addEventListener('click', () => {
				const selectedTag = button.dataset.tag;

				// Update active state
				filterButtons.forEach(btn => btn.classList.remove('active'));
				button.classList.add('active');

				// Filter posts
				filterablePosts.forEach(post => {
					if (selectedTag === 'all') {
						post.classList.remove('hidden');
					} else {
						const postTags = JSON.parse(post.dataset.tags || '[]');
						if (postTags.includes(selectedTag)) {
							post.classList.remove('hidden');
						} else {
							post.classList.add('hidden');
						}
					}
				});
			});
		});
	});
</script>
