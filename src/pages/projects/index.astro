---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';

const projects = [
  {
    title: "Navy Engineering Leadership",
    description: "21+ years of leading engineering teams, managing complex systems, and ensuring mission readiness across multiple deployments.",
    tags: ["Leadership", "Engineering", "Operations"],
    status: "Completed"
  },
  {
    title: "Building Commissioning",
    description: "Commercial building systems commissioning at Enovity, including HVAC optimization and energy efficiency programs.",
    tags: ["HVAC", "Energy", "Systems"],
    status: "Completed"
  },
  {
    title: "This Website",
    description: "Personal portfolio built with Astro, Tailwind CSS, and deployed to Cloudflare Pages.",
    tags: ["Astro", "Tailwind", "Cloudflare"],
    status: "In Progress"
  }
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Projects | ${SITE_TITLE}`} description="Featured projects and work" />
  </head>
  <body>
    <Header />
    <main>
      <div class="container">
        <header class="page-header">
          <h1>Projects</h1>
          <p>A selection of projects and work I have been involved with.</p>
        </header>
        <div class="projects-grid">
          {projects.map((project) => (
            <div class="project-card">
              <div class="project-status">{project.status}</div>
              <h2>{project.title}</h2>
              <p>{project.description}</p>
              <div class="tags">
                {project.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>

<style>
  body { background-color: #0a0a0b; color: #fafafa; font-family: system-ui, sans-serif; margin: 0; line-height: 1.6; }
  .container { max-width: 1000px; margin: 0 auto; padding: 0 1.5rem; }
  .page-header { padding: 4rem 0 2rem; }
  .page-header h1 { font-size: 2.5rem; margin: 0 0 0.5rem; }
  .page-header p { color: #a1a1aa; margin: 0; }
  .projects-grid { display: grid; gap: 1.5rem; padding-bottom: 4rem; }
  .project-card { background: #18181b; border: 1px solid #27272a; border-radius: 12px; padding: 1.5rem; transition: all 0.3s; }
  .project-card:hover { background: #1f1f23; border-color: #3f3f46; }
  .project-status { display: inline-block; font-size: 0.75rem; color: #3b82f6; background: rgba(59,130,246,0.1); padding: 0.25rem 0.75rem; border-radius: 999px; margin-bottom: 1rem; }
  .project-card h2 { font-size: 1.5rem; margin: 0 0 0.75rem; }
  .project-card p { color: #a1a1aa; margin: 0 0 1rem; }
  .tags { display: flex; gap: 0.5rem; flex-wrap: wrap; }
  .tag { background: #27272a; color: #71717a; padding: 0.25rem 0.75rem; border-radius: 999px; font-size: 0.75rem; }
</style>
