---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

const upcomingShows = [
  {
    date: 'Sept 14, 2025',
    venue: 'St. Charles History Museum',
    event: 'St. Charles Jazz Weekend',
    time: '4:00 PM - 6:00 PM',
    location: 'St. Charles, IL',
    featured: true
  },
  {
    date: 'Recurring',
    venue: 'Arcada Theatre - Legends Stage',
    event: 'Live Jazz Sessions',
    location: 'St. Charles, IL',
    featured: false
  },
  {
    date: 'Recurring',
    venue: 'Fulton Street Collective',
    event: 'Jazz Nights',
    location: 'Chicago, IL',
    featured: false
  }
];

const notableCollaborators = [
  'Matt Ulery',
  'Greg Ward',
  'Joel Frahm',
  'Donny McCaslin',
  'Dave Douglas',
  'Marcus Finnie',
  'Don Aliquo',
  'Bruce Foreman'
];
---

<BaseLayout title="Jack Macklin - Chicago Jazz Guitarist, Composer & Educator">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-background">
        <div class="hero-gradient"></div>
        <div class="hero-pattern"></div>
      </div>

      <div class="container hero-content">
        <div class="hero-text">
          <span class="hero-label">Chicago Jazz</span>
          <h1 class="hero-title">
            Jack <span class="accent">Macklin</span>
          </h1>
          <p class="hero-subtitle">Guitarist • Composer • Educator</p>
          <p class="hero-description">
            A rising star in the modern jazz scene, blending tradition with forward-thinking
            improvisation. Currently performing with the Jack Macklin Trio across Chicago
            and the Midwest.
          </p>

          <div class="hero-actions">
            <a href="/shows" class="btn btn-primary">Upcoming Shows</a>
            <a href="/music" class="btn btn-secondary">Listen Now</a>
          </div>
        </div>

        <div class="hero-visual">
          <div class="guitar-illustration">
            <svg viewBox="0 0 200 400" class="guitar-svg" aria-hidden="true">
              <!-- Stylized guitar silhouette -->
              <ellipse cx="100" cy="320" rx="70" ry="60" fill="var(--color-accent)" opacity="0.1"/>
              <ellipse cx="100" cy="320" rx="60" ry="50" fill="var(--color-bg-card)" stroke="var(--color-accent)" stroke-width="2"/>
              <ellipse cx="100" cy="320" rx="20" ry="15" fill="var(--color-bg)" stroke="var(--color-accent)" stroke-width="1"/>
              <rect x="95" y="100" width="10" height="200" fill="var(--color-bg-card)" stroke="var(--color-accent)" stroke-width="1"/>
              <rect x="85" y="80" width="30" height="30" rx="2" fill="var(--color-bg-card)" stroke="var(--color-accent)" stroke-width="1"/>
              <!-- Strings -->
              <line x1="97" y1="110" x2="97" y2="310" stroke="var(--color-accent)" stroke-width="0.5" opacity="0.6"/>
              <line x1="100" y1="110" x2="100" y2="310" stroke="var(--color-accent)" stroke-width="0.5" opacity="0.6"/>
              <line x1="103" y1="110" x2="103" y2="310" stroke="var(--color-accent)" stroke-width="0.5" opacity="0.6"/>
              <!-- Tuning pegs -->
              <circle cx="88" cy="85" r="3" fill="var(--color-accent)"/>
              <circle cx="112" cy="85" r="3" fill="var(--color-accent)"/>
              <circle cx="88" cy="95" r="3" fill="var(--color-accent)"/>
              <circle cx="112" cy="95" r="3" fill="var(--color-accent)"/>
            </svg>
            <div class="music-notes">
              <span class="note note-1">&#9834;</span>
              <span class="note note-2">&#9835;</span>
              <span class="note note-3">&#9833;</span>
            </div>
          </div>
        </div>
      </div>

      <div class="scroll-indicator">
        <span>Scroll to explore</span>
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 5v14M5 12l7 7 7-7"/>
        </svg>
      </div>
    </section>

    <!-- Featured Trio Section -->
    <section class="trio-section">
      <div class="container">
        <div class="section-header">
          <span class="section-label">The Band</span>
          <h2>The Jack Macklin Trio</h2>
          <p class="section-description">
            "A bright light in the growing community of improvised music" — uniquely navigating
            through popular songs from the 1950s to present, alongside original compositions.
          </p>
        </div>

        <div class="trio-members">
          <div class="member">
            <div class="member-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2z"/>
              </svg>
            </div>
            <h3>Jack Macklin</h3>
            <p class="member-role">Guitar</p>
          </div>
          <div class="member">
            <div class="member-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <ellipse cx="12" cy="18" rx="3" ry="4"/>
                <path d="M15 18V6a3 3 0 10-6 0v12"/>
              </svg>
            </div>
            <h3>Parker Kaplan</h3>
            <p class="member-role">Double Bass</p>
          </div>
          <div class="member">
            <div class="member-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <circle cx="12" cy="12" r="10"/>
                <circle cx="12" cy="12" r="6"/>
                <circle cx="12" cy="12" r="2"/>
              </svg>
            </div>
            <h3>Ryan Brasley</h3>
            <p class="member-role">Drums</p>
          </div>
        </div>

        <div class="trio-cta">
          <a href="/music" class="btn btn-primary">Listen to "One" EP</a>
          <p class="streaming-note">Available on all streaming platforms</p>
        </div>
      </div>
    </section>

    <!-- About Preview Section -->
    <section class="about-preview">
      <div class="container">
        <div class="about-grid">
          <div class="about-content">
            <span class="section-label">About</span>
            <h2>A Young Lion of Chicago Jazz</h2>
            <p>
              Jack Macklin's love for the guitar began at age 8, sparked by learning his first
              song — "Crazy Train" by Ozzy Osbourne. That initial spark ignited a lifelong
              pursuit to explore and discover the impact of music on humanity.
            </p>
            <p>
              A graduate of <strong>DePaul University's</strong> jazz studies program, Jack
              studied closely with Chicago's finest musicians including <strong>Scott Hesse</strong>
              and <strong>Dana Hall</strong>, diving deep into improvisation and the rich
              lineage of the guitar.
            </p>
            <p>
              At just 25, Jack has already performed with some of jazz's most notable figures
              and continues to push the boundaries of what a genre can be — blending tradition
              with forward-thinking innovation.
            </p>
            <a href="/about" class="link-arrow">
              Read full biography
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <div class="about-stats">
            <div class="stat-card">
              <span class="stat-number">25</span>
              <span class="stat-label">Years Old</span>
              <span class="stat-description">Rising star in jazz</span>
            </div>
            <div class="stat-card">
              <span class="stat-number">17+</span>
              <span class="stat-label">Years Playing</span>
              <span class="stat-description">Started at age 8</span>
            </div>
            <div class="stat-card">
              <span class="stat-number">DePaul</span>
              <span class="stat-label">University</span>
              <span class="stat-description">B.A. in Music</span>
            </div>
            <div class="stat-card featured">
              <span class="stat-label">Featured On</span>
              <div class="media-logos">
                <span>WGN</span>
                <span>FOX 32</span>
                <span>Chicago Reader</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Collaborators Section -->
    <section class="collaborators-section">
      <div class="container">
        <div class="section-header centered">
          <span class="section-label">Collaborations</span>
          <h2>Performed With</h2>
        </div>

        <div class="collaborators-marquee">
          <div class="marquee-track">
            {[...notableCollaborators, ...notableCollaborators].map((name) => (
              <span class="collaborator-name">{name}</span>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Upcoming Shows Section -->
    <section class="shows-section">
      <div class="container">
        <div class="section-header">
          <span class="section-label">Live</span>
          <h2>Upcoming Shows</h2>
        </div>

        <div class="shows-list">
          {upcomingShows.map((show) => (
            <div class:list={['show-card', { featured: show.featured }]}>
              <div class="show-date">
                <span class="date-text">{show.date}</span>
                {show.time && <span class="time-text">{show.time}</span>}
              </div>
              <div class="show-details">
                <h3 class="show-venue">{show.venue}</h3>
                <p class="show-event">{show.event}</p>
                <p class="show-location">{show.location}</p>
              </div>
              {show.featured && (
                <span class="featured-badge">Featured</span>
              )}
            </div>
          ))}
        </div>

        <div class="shows-cta">
          <a href="/shows" class="btn btn-secondary">View All Shows</a>
          <a href="/contact" class="link-arrow">
            Book for your event
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Podcast Section -->
    <section class="podcast-section">
      <div class="container">
        <div class="podcast-card">
          <div class="podcast-content">
            <span class="section-label">Podcast</span>
            <h2>Let's Cool One</h2>
            <p>
              Dive deep into the Chicago jazz scene and beyond. Through interviews with
              acclaimed musicians, Jack sheds light on the people growing and fostering
              the jazz community.
            </p>
            <div class="podcast-meta">
              <span class="podcast-platform">Part of the Alithio Network</span>
            </div>
            <a href="/podcast" class="btn btn-primary">Listen Now</a>
          </div>
          <div class="podcast-visual">
            <div class="podcast-artwork">
              <div class="vinyl-record">
                <div class="vinyl-inner">
                  <span class="vinyl-label">LCO</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>Let's Make Music Together</h2>
          <p>
            Available for performances, collaborations, private events, and teaching.
            Based in Chicago, performing throughout the Midwest and beyond.
          </p>
          <div class="cta-buttons">
            <a href="/contact" class="btn btn-primary btn-large">Get in Touch</a>
            <a href="https://www.gigsalad.com/jack_macklin_nashville" class="btn btn-secondary" target="_blank" rel="noopener">
              Book on GigSalad
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    overflow: hidden;
    padding: 120px 0 60px;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .hero-gradient {
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at 70% 20%, rgba(212, 168, 83, 0.15) 0%, transparent 50%),
                radial-gradient(ellipse at 30% 80%, rgba(212, 168, 83, 0.1) 0%, transparent 40%);
  }

  .hero-pattern {
    position: absolute;
    inset: 0;
    opacity: 0.03;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23d4a853' fill-opacity='1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }

  .hero-label {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: var(--space-md);
    padding: var(--space-xs) var(--space-md);
    background: rgba(212, 168, 83, 0.1);
    border: 1px solid rgba(212, 168, 83, 0.2);
    border-radius: var(--radius-full);
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 700;
    line-height: 0.95;
    margin-bottom: var(--space-md);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-lg);
    letter-spacing: 0.1em;
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-xl);
    max-width: 500px;
  }

  .hero-actions {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .guitar-illustration {
    position: relative;
  }

  .guitar-svg {
    width: 200px;
    height: auto;
    animation: float 6s ease-in-out infinite;
  }

  .music-notes {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .note {
    position: absolute;
    color: var(--color-accent);
    font-size: 2rem;
    animation: float-note 4s ease-in-out infinite;
    opacity: 0.6;
  }

  .note-1 { top: 20%; right: 10%; animation-delay: 0s; }
  .note-2 { top: 40%; left: 5%; animation-delay: 1.3s; }
  .note-3 { bottom: 30%; right: 5%; animation-delay: 2.6s; }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  @keyframes float-note {
    0%, 100% { transform: translateY(0) rotate(0deg); opacity: 0.6; }
    50% { transform: translateY(-15px) rotate(10deg); opacity: 1; }
  }

  .scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-text-muted);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    animation: bounce 2s ease-in-out infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(5px); }
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    padding: 0.875rem 1.75rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
    border: 1px solid transparent;
  }

  .btn-primary {
    background: var(--color-accent);
    color: var(--color-bg);
  }

  .btn-primary:hover {
    background: var(--color-accent-bright);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: transparent;
    border-color: var(--color-border);
    color: var(--color-text-primary);
  }

  .btn-secondary:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .btn-large {
    padding: 1rem 2rem;
    font-size: 1rem;
  }

  /* Section Styles */
  section {
    padding: var(--space-3xl) 0;
  }

  .section-header {
    margin-bottom: var(--space-2xl);
  }

  .section-header.centered {
    text-align: center;
  }

  .section-label {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: var(--space-sm);
  }

  .section-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin-top: var(--space-md);
    line-height: 1.7;
  }

  /* Trio Section */
  .trio-section {
    background: var(--color-bg-elevated);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }

  .trio-members {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-xl);
    margin-bottom: var(--space-2xl);
  }

  .member {
    text-align: center;
    padding: var(--space-xl);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
  }

  .member:hover {
    border-color: var(--color-accent);
    transform: translateY(-4px);
  }

  .member-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto var(--space-md);
    padding: var(--space-md);
    background: rgba(212, 168, 83, 0.1);
    border-radius: 50%;
    color: var(--color-accent);
  }

  .member-icon svg {
    width: 100%;
    height: 100%;
  }

  .member h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-xs);
  }

  .member-role {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .trio-cta {
    text-align: center;
  }

  .streaming-note {
    margin-top: var(--space-md);
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  /* About Preview */
  .about-preview {
    background: var(--color-bg);
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: start;
  }

  .about-content p {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
    line-height: 1.8;
  }

  .about-content p strong {
    color: var(--color-accent);
    font-weight: 600;
  }

  .link-arrow {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-weight: 600;
    margin-top: var(--space-md);
  }

  .link-arrow svg {
    transition: transform var(--transition-fast);
  }

  .link-arrow:hover svg {
    transform: translateX(4px);
  }

  .about-stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
  }

  .stat-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    text-align: center;
  }

  .stat-card.featured {
    grid-column: span 2;
  }

  .stat-number {
    display: block;
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-accent);
    line-height: 1;
  }

  .stat-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-top: var(--space-xs);
  }

  .stat-description {
    display: block;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin-top: var(--space-xs);
  }

  .media-logos {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
    margin-top: var(--space-md);
    font-weight: 600;
    color: var(--color-text-secondary);
  }

  /* Collaborators Marquee */
  .collaborators-section {
    overflow: hidden;
    background: var(--color-bg-elevated);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }

  .collaborators-marquee {
    position: relative;
    margin-top: var(--space-xl);
    overflow: hidden;
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
  }

  .marquee-track {
    display: flex;
    gap: var(--space-2xl);
    animation: marquee 20s linear infinite;
    width: max-content;
  }

  .collaborator-name {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    white-space: nowrap;
  }

  @keyframes marquee {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }

  /* Shows Section */
  .shows-section {
    background: var(--color-bg);
  }

  .shows-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
  }

  .show-card {
    display: grid;
    grid-template-columns: 150px 1fr auto;
    gap: var(--space-xl);
    align-items: center;
    padding: var(--space-lg);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
  }

  .show-card:hover {
    border-color: var(--color-border-hover);
    transform: translateX(4px);
  }

  .show-card.featured {
    border-color: var(--color-accent);
    background: linear-gradient(135deg, rgba(212, 168, 83, 0.05) 0%, transparent 50%);
  }

  .show-date {
    display: flex;
    flex-direction: column;
  }

  .date-text {
    font-weight: 600;
    color: var(--color-accent);
  }

  .time-text {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

